<h1>Student Show</h1>

<h1>Name: <%= @student.name %></h1>
<h2>Age: <%= @student.age %></h2>

<h2>Courses: </h2>
<ul>
    <% @student.enrollments.each do |enrollment| %>
    <li>
    <%= enrollment.course.name %>
        <%= button_to 'Drop Course', enrollment_path(enrollment), method: "delete" %>
    </li>
    <% end %>

    
</ul>
    <br>
    <%= button_to 'Delete Student', student_path(@student), method: "delete" %>





